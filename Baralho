""" Código Baralho """


# Classe Carta 
class Carta:
    # Inicializando com o valor(int) da carta e o naipe(string)
    def __init__(self, valor, naipe):
        self.valor = valor
        self.naipe = naipe
    
    # Função que mostra a carta na versão que conhecemos  
    def mostrar_carta(self):
        if(self.valor == 1):
            print("A" + self.naipe)
        elif(self.valor == 11):
            print("J" + self.naipe)
        elif(self.valor == 12):
            print("Q" + self.naipe)
        elif(self.valor == 13):
            print("K" + self.naipe)
        else:
            print(str(self.valor) + self.naipe)
        
    
    
    
# Função pra definir cada carta
def set_cartas(contador):
    if contador < 13:
        cartinha = Carta(contador+1,"♥")
        return cartinha
    elif contador < 26:
        cartinha = Carta(contador-12,"♣")
        return cartinha
    elif contador < 39:
        cartinha = Carta(contador-25,"♠")
        return cartinha
    elif contador < 52:
        cartinha = Carta(contador-38,"♦")
        return cartinha
    else:
        print("Erro")
    

# Função para inicializar o baralho
def set_baralho():
    baralho = []
    for contador in range(52):
        cartinha = set_cartas(contador)
        baralho.append(cartinha)
    return baralho
    


baralho = []
baralho = set_baralho()
